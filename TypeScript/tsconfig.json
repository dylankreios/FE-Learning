{
  "include": ["./src/**/*"], // 编译的文件
  "exclude": ["./src/hello/**/*"], // 不编译的文件
  /* 编译选项 */
  "compilerOptions": {
    /* 基本选项 */
    "target": "es2015", // 编译结果标准
    "module": "es2015", // 模块化标准
    "outDir": "./dist", // 输出路径
    "allowJs": false, // 是否编译 js
    "checkJs": false, // 是否检查 js 代码是否符合 ts 规范
    "removeComments": false, // 编译结果是否去除注释
    "noEmit": false, // 是否不生成编译文件
    "noEmitOnError": false, // 当有错误时不生成编译文件

    /* 严格类型检查选项 */
    "strict": false, // 所有严格类型检查总开关
    "alwaysStrict": true, // 设置编译后的文件是否是严格模式
    "noImplicitAny": true, // 是否不允许隐式的 any 类型
    "noImplicitThis": true, // 是否不允许不明类型的 this
    "strictNullChecks": true // 是否检查可能存在的 null
  }
}
